{
  "manifest_version": 3,
  "name": "Screen Time Tracker",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "externally_connectable": {
    "matches": ["http://localhost:5173/*"]
  }
}
